ks = list(range(5,16))
kmeans_results = []
for k in ks:
    km = KMeans(n_clusters=k, random_state=RNG, n_init=10)
    labs = km.fit_predict(X_pca50)  # cluster on PCA50
    sil = silhouette_score(X_pca50, labs)
    dbi = davies_bouldin_score(X_pca50, labs)
    dunn = dunn_index(X_pca50, labs)
    ari = adjusted_rand_score(y, labs)
    nmi = normalized_mutual_info_score(y, labs)
    kmeans_results.append({'k':k, 'silhouette':sil, 'dbi':dbi, 'dunn':dunn, 'ARI':ari, 'NMI':nmi, 'inertia':km.inertia_})
kmeans_df = pd.DataFrame(kmeans_results)
display(kmeans_df.sort_values('silhouette', ascending=False).head())
